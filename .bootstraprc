---
bootstrapVersion: 3

styleLoaders:
    - style
    - css?sourceMap
    - postcss
    - sass?sourceMap&output=expanded&precision=8

styles:
    # Always needs to be included
    mixins: true

    # Utilities
    utilities: true

    # Normalize
    normalize: true
    scaffolding: true

    # Selected stylesheets (and ascribe-react-component dependencies)
    buttons: true
    component-animations: true
    forms: true
    popovers: true

scripts: false
